{# purpose of this template: build the form to edit an instance of event #}
{% set baseTemplate = app.request.query.getBoolean('raw', false) ? 'raw' : (routeArea == 'admin' ? 'adminBase' : 'base') %}
{% extends 'RKBulletinModule::' ~ baseTemplate ~ '.html.twig' %}

{% block header %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@RKBulletinModule:js/RKBulletinModule.Validation.js', 98)) }}
    {{ pageAddAsset('javascript', zasset('@RKBulletinModule:js/RKBulletinModule.EditFunctions.js', 99)) }}
    {{ pageAddAsset('javascript', asset('typeahead/typeahead.bundle.min.js')) }}
{% endblock %}
{% block title mode == 'create' ? __('Create event') : __('Edit event') %}
{% block admin_page_icon mode == 'create' ? 'plus' : 'pencil-square-o' %}
{% block content %}
    <div class="rkbulletinmodule-event rkbulletinmodule-edit">
        {% form_theme form with [
            '@RKBulletinModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form, {attr: {id: 'eventEditForm', class: 'rkbulletin-edit-form'}}) }}
        {{ form_errors(form) }}
        {% if translationsEnabled == true %}
            <div class="zikula-bootstrap-tab-container">
                <ul class="{{ form.vars.id|lower }}-translation-locales nav nav-tabs">
                    {% for language in supportedLanguages %}
                        <li{% if language == app.request.locale %} class="active"{% endif %}>
                            <a href="#" data-toggle="tab" data-target=".{{ form.vars.id|lower }}-translations-fields-{{ language }}">
                                {% if not form.vars.valid %}
                                    <span class="label label-danger"><i class="fa fa-warning"></i><span class="sr-only">{{ __('Errors') }}</span></span>
                                {% endif %}
                                {% set hasRequiredFields = language in localesWithMandatoryFields %}
                                {% if hasRequiredFields %}<span class="required">{% endif %}{{ language|languageName|safeHtml }}{% if hasRequiredFields %}</span>{% endif %}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="{{ form.vars.id|lower }}-translation-fields tab-content">
                    {% for language in supportedLanguages %}
                        <div class="{{ form.vars.id|lower }}-translations-fields-{{ language }} tab-pane fade{% if language == app.request.locale %} active in{% endif %}">
                            <fieldset>
                                <legend>{{ language|languageName|safeHtml }}</legend>
                                {% if language == app.request.locale %}
                                    {{ form_row(form.description) }}
                                {% else %}
                                    {{ form_row(attribute(form, 'translations' ~ language)) }}
                                {% endif %}
                            </fieldset>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            {% set language = app.request.locale %}
            <fieldset>
                <legend>{{ language|languageName|safeHtml }}</legend>
                {{ form_row(form.description) }}
            </fieldset>
        {% endif %}
        <fieldset>
            <legend>{{ __('Further properties') }}</legend>
            {{ form_row(form.eventTitle) }}
            {{ form_row(form.startDate) }}
            {{ form_row(form.endDate) }}
        </fieldset>
        
        {{ include(
            '@RKBulletinModule/Notice/includeSelectEditOne.html.twig',
            { group: 'event', alias: 'notice', aliasReverse: 'event', mandatory: false, idPrefix: 'bullEvent_Notice', linkingItem: event, displayMode: 'autocomplete' }
        ) }}
        {% if featureActivationHelper.isEnabled(constant('RK\\BulletinModule\\Helper\\FeatureActivationHelper::CATEGORIES'), 'event') %}
            {{ include('@RKBulletinModule/Helper/includeCategoriesEdit.html.twig', { obj: event }) }}
        {% endif %}
        {% if mode != 'create' %}
            {{ include('@RKBulletinModule/Helper/includeStandardFieldsEdit.html.twig', { obj: event }) }}
        {% endif %}
        
        {% set hookId = mode != 'create' ? event.id : null %}
        {% set hooks = notifyDisplayHooks(eventName='rkbulletinmodule.ui_hooks.events.form_edit', id=hookId) %}
        {% if hooks is iterable and hooks|length > 0 %}
            {% for providerArea, hook in hooks if providerArea != 'provider.scribite.ui_hooks.editor' %}
                <fieldset>
                    <legend>{{ providerArea }}</legend>
                    {{ hook }}
                </fieldset>
            {% endfor %}
        {% endif %}
        
        {% if form.moderationSpecificCreator is defined %}
            <fieldset id="moderationFieldsSection">
                <legend>{{ __('Moderation') }} <i class="fa fa-expand"></i></legend>
                <div id="moderationFieldsContent">
                    {{ form_row(form.moderationSpecificCreator) }}
                    {{ form_row(form.moderationSpecificCreationDate) }}
                </div>
            </fieldset>
        {% endif %}
        
        {# include return control #}
        {% if mode == 'create' %}
            <fieldset>
                <legend>{{ __('Return control') }}</legend>
                {{ form_row(form.repeatCreation) }}
            </fieldset>
        {% endif %}
        
        {# include possible submit actions #}
        <div class="form-group form-buttons">
            <div class="col-sm-offset-3 col-sm-9">
                {% for action in actions %}
                    {{ form_widget(attribute(form, action.id)) }}
                {% endfor %}
                {{ form_widget(form.reset) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {% set editImage = '<span class="fa fa-pencil-square-o"></span>' %}
    {% set removeImage = '<span class="fa fa-trash-o"></span>' %}
    
    <script type="text/javascript">
    /* <![CDATA[ */
        var editImage = '{{ editImage|raw }}';
        var removeImage = '{{ removeImage|raw }}';
        var relationHandler = new Array();
        var newItem = {
            ot: 'notice',
            prefix: 'bullEvent_NoticeSelectorDoNew',
            moduleName: 'RKBulletinModule',
            acInstance: null,
            windowInstanceId: null
        };
        relationHandler.push(newItem);
        
        ( function($) {
            $(document).ready(function() {
                // initialise auto completion for user fields
                {% if form.moderationSpecificCreator is defined %}
                    rKBulletinInitUserField('rkbulletinmodule_event_moderationSpecificCreator', 'getCommonUsersList');
                {% endif %}
                rKBulletinInitRelationItemsForm('notice', 'bullEvent_Notice', true);
                rKBulletinInitEditForm('{{ mode }}', '{% if mode != 'create' %}{{ event.id }}{% endif %}');
            });
        })(jQuery);
    /* ]]> */
    </script>
{% endblock %}

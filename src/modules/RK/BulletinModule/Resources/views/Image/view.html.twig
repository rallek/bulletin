{# purpose of this template: images list view #}
{% extends routeArea == 'admin' ? 'RKBulletinModule::adminBase.html.twig' : 'RKBulletinModule::base.html.twig' %}
{% block title own ? __('My images') : __('Image list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="rkbulletinmodule-image rkbulletinmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@RKBulletinModule/Image/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('rkbulletinmodule_image_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="imagesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cImage" />
                <col id="cPerson" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="rkbulletin-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted">{{ __('Actions') }}</th>
                <th id="hImage" scope="col" class="text-left">
                    <a href="{{ sort.image.url }}" title="{{ __f('Sort by %s', {'%s': 'image'}) }}" class="{{ sort.image.class }}">{{ __('Image') }}</a>
                </th>
                <th id="hPerson" scope="col" class="text-left">
                    <a href="{{ sort.person.url }}" title="{{ __f('Sort by %s', {'%s': 'person'}) }}" class="{{ sort.person.class }}">{{ __('Person') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for image in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center">
                        <input type="checkbox" name="items[]" value="{{ image.id }}" class="rkbulletin-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ image.id }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('RKBulletinModule:ItemActionsMenu:menu', [], { entity: image, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ image.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
                <td headers="hImage" class="text-left">
                    {% if image.imageMeta|default %}
                    <a href="{{ image.imageUrl }}" title="{{ image.getTitleFromDisplayPattern()|e('html_attr') }}"{% if image.imageMeta.isImage %} class="image-link"{% endif %}>
                    {% if image.imageMeta.isImage %}
                        {% set thumbOptions = attribute(thumbRuntimeOptions, 'imageImage') %}
                        <img src="{{ image.image.getPathname()|imagine_filter('zkroot', thumbOptions) }}" alt="{{ image.getTitleFromDisplayPattern()|e('html_attr') }}" width="{{ thumbOptions.thumbnail.size[0] }}" height="{{ thumbOptions.thumbnail.size[1] }}" class="img-thumbnail" />
                    {% else %}
                        {{ __('Download') }} ({{ image.imageMeta.size|rkbulletinmodule_fileSize(image.image.getPathname(), false, false) }})
                    {% endif %}
                    </a>
                    {% endif %}
                </td>
                <td headers="hPerson" class="text-left">
                    {% if image.person|default %}
                        <a href="{{ path('rkbulletinmodule_notice_' ~ routeArea ~ 'display', { 'id': image.person.id }) }}">{% spaceless %}
                          {{ image.person.getTitleFromDisplayPattern() }}
                        {% endspaceless %}</a>
                        <a id="noticeItem{{ image.id }}_rel_{{ image.person.id }}Display" href="{{ path('rkbulletinmodule_notice_' ~ routeArea ~ 'display', {'id': image.person.id, 'raw': 1 }) }}" title="{{ __('Open quick view window')|e('html_attr') }}" class="rkbulletin-inline-window hidden" data-modal-title="{{ image.person.getTitleFromDisplayPattern()|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
                    {% else %}
                        {{ __('Not set.') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}4{% else %}3{% endif %}">
            {{ __('No images found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'rkbulletinmodule_image_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="rKBulletinModuleAction" class="col-sm-3 control-label">{{ __('With selected images') }}</label>
                <div class="col-sm-6">
                    <select id="rKBulletinModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('RKBulletinModule:Image:', '::', 'ACCESS_EDIT') %}
                {% set createTitle = __('Create image') %}
                <a href="{{ path('rkbulletinmodule_image_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if showAllEntries == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('rkbulletinmodule_image_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('rkbulletinmodule_image_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='rkbulletinmodule.ui_hooks.images.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
